# ===========================================
# Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values.
# For staging: use staging Firebase project credentials
# For production: use production Firebase project credentials

# OpenAI API Key (required)
OPENAI_API_KEY=sk-...

# Server
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173

# --- Firebase Auth (Client) ---
# Get from: Firebase Console > Project Settings > General > Your apps > Firebase SDK snippet
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# --- Firebase Admin (Server) ---
# Generate at: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# --- PostgreSQL (Railway) ---
DATABASE_URL=postgresql://user:password@host:5432/dbname

# --- Cloudflare R2 ---
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=ohanashi-media
